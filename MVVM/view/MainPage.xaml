<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Converter.MVVM.ViewModels"
    Shell.NavBarIsVisible="False"
    x:Class="Converter.MVVM.View.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <!-- Background image -->
        <Image Source="bg.png"
               Aspect="AspectFill"
               Opacity="1"
               InputTransparent="True"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <VerticalStackLayout Spacing="30" Padding="30">

            <Label Text="Mauiverter"
                   FontFamily="MyFont"
                   FontSize="44"
                   HorizontalOptions="Center"
                   Margin="0, 60, 0, 0"
                   TextColor="#6501D4"/>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto"
                  ColumnSpacing="10" RowSpacing="10">

                <!-- Row 0 -->
                <Border StrokeThickness="3" Padding="3">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="information.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Information"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Column="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="volume.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Volume"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Column="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="length.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Length"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <!-- Row 1 -->
                <Border StrokeThickness="3" Padding="3" Grid.Row="1" Grid.Column="0">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="mass.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Mass"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="1" Grid.Column="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="temperature.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Temperature"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="1" Grid.Column="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="energy.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Energy"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <!-- Row 2 -->
                <Border StrokeThickness="3" Padding="3" Grid.Row="2" Grid.Column="0">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="area.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Area"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="2" Grid.Column="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="speed.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Speed"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="2" Grid.Column="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0.0"/>
                            <GradientStop Color="#FF00FE" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Content>
                        <Frame CornerRadius="15" Padding="10" BackgroundColor="White" HasShadow="True">
                            <ImageButton Source="duration.png"
                                         Command="{Binding SelectCategoryCommand}"
                                         CommandParameter="Duration"
                                         Aspect="AspectFit"/>
                        </Frame>
                    </Border.Content>
                </Border>

            </Grid>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
