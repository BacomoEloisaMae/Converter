<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Converter.MVVM.ViewModels"
    Shell.NavBarIsVisible="False"
    x:Class="Converter.MVVM.View.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <!-- Background image -->
        <Image Source="bg.png"
               Aspect="AspectFill"
               Opacity="1"
               InputTransparent="True"
               HorizontalOptions="Fill"
               VerticalOptions="Fill" />

        <VerticalStackLayout Spacing="30" Padding="30">

            <Label Text="Mauiverter"
                   FontFamily="MyFont"
                   FontSize="44"
                   HorizontalOptions="Center"
                   Margin="0, 60, 0, 0"
                   TextColor="#6501D4"/>

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto"
      ColumnSpacing="15" RowSpacing="20">

                <!-- ROW 0 -->
                <Border StrokeThickness="3" Padding="3">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="information.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Information"
                             HeightRequest="60"/>

                            <Label Text="Information"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Column="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="volume.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Volume"
                             HeightRequest="60"/>

                            <Label Text="Volume"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Column="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="length.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Length"
                             HeightRequest="60"/>

                            <Label Text="Length"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <!-- ROW 1 -->
                <Border StrokeThickness="3" Padding="3" Grid.Row="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="mass.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Mass"
                             HeightRequest="60"/>

                            <Label Text="Mass"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="1" Grid.Column="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="temperature.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Temperature"
                             HeightRequest="60"/>

                            <Label Text="Temperature"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="1" Grid.Column="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="energy.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Energy"
                             HeightRequest="60"/>

                            <Label Text="Energy"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <!-- ROW 2 -->
                <Border StrokeThickness="3" Padding="3" Grid.Row="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="area.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Area"
                             HeightRequest="60"/>

                            <Label Text="Area"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="2" Grid.Column="1">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="speed.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Speed"
                             HeightRequest="60"/>

                            <Label Text="Speed"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

                <Border StrokeThickness="3" Padding="3" Grid.Row="2" Grid.Column="2">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#6501D4" Offset="0"/>
                            <GradientStop Color="#FF00FE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>

                    <Frame CornerRadius="15" Padding="10" BackgroundColor="White">
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <ImageButton Source="duration.png"
                             Command="{Binding SelectCategoryCommand}"
                             CommandParameter="Duration"
                             HeightRequest="60"/>

                            <Label Text="Duration"
                       FontSize="14"
                       HorizontalTextAlignment="Center"
                       TextColor="Black"/>
                        </VerticalStackLayout>
                    </Frame>
                </Border>

            </Grid>
        </VerticalStackLayout>

    </Grid>
</ContentPage>
